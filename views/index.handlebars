<div class="container bg">

    <div class="row">
        <div class="center col-sm-12">
            <img src="assets/img/burger.png" alt="Eat-Da-Burger App" class="image">
            <h1>Eat-Da-Burger</h1>

            <br>

        </div>
    </div>

    <br>
{{!-- burgers that are ready to eat with devour button --}}
    <div class="row">
        <div class="col-sm-6">

            <br>

            <h2>Burgers Ready To Eat</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}

                    <form>
                        <input type="hidden" name="devoured" value="true">

                        <button class="eatburger btn-primary" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}" type="submit">Devour It!</button>
                    </form>

                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
{{!-- burgers that have been eaten --}}
        <div class="col-sm-6" id="eaten">

            <h2>Burgers That Have Been Eaten!</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}

            </li>
            {{/if}}
            {{/each}}

        </div>

    </div>

    {{!-- creating a new burger --}}
    <div class="row">
        <div class="center col-sm-12">

            <h2>Add A Burger!</h2>

            <form class="create-form">

                <div class="form-group">
                    <label for="newburger"></label>
                    <input type="text" id="newburger" name="burger_name">
                </div>

                <button class="btn-primary" data-id="{{this.id}}" data-newDevoured="{{devour}}" type="submit">Submit
                    Burger</button>
            </form>
        </div>
    </div>





</div>